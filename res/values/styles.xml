<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="alertTheme" parent="android:style/Theme.Holo.Dialog"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="drop_down_select_text_style">
        <item name="android:textColor">@color/graph_drop_down_font_blue</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="my_score_drop_down_text_style_hint">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="my_score_y_axis_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="my_score_points_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>